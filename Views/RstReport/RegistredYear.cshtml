@using Aisger
@using GridMvc.Html
@model Aisger.Models.RST_Report
@Html.Partial("~/Views/Home/MenuItem.cshtml")
@Html.Partial("~/Views/Home/EditHeaderView.cshtml")
<div id="B">
    <ul class="titlegroup" style="margin-top: 8px;">
        <li style="font-size: 18px; color: #2679b5;" id="parentLabel"> @ResourceSetting.Reestr  <span></span></li>
        <li id="selectLabel"> <span class="glyphicon glyphicon-arrow-right"></span>  @ResourceSetting.RST_Report  (<span id="countGridRecord"></span>)</li>
    </ul>
    <div id="wrapper_grid" style="margin-left: 50px;margin-bottom: 100px">
        @using (Html.BeginForm("RegistredYear", "RstReport", FormMethod.Post, new { id = "demoForm", name = "demoForm" }))
        {
            @Html.ValidationSummary(true)

            <div class="clearfixmandatory">
                <label for="" style="width: 40px;">Год</label>
                <div class="input" style="margin-left: 20px">
                    @Html.TextBoxFor(model => model.ReportYear, new { @class = "form-control", style = "width:80px;", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.ReportYear)
                </div>
            </div>
            <button id="saveUpdate" type="submit" name="SaveUpdate" value="SaveUpdate" style="visibility: hidden;"></button>

        }
        <div>
            <button type="button" class="btn btn-success btn-sm" onclick="history.go(-1);return false;">
                <span class="glyphicon glyphicon-backward" aria-hidden="true"></span> @ResourceSetting.Back
            </button>
            <button id="saveBtn" type="button" class="btn btn-success btn-sm" onclick=" SaveChange() " style=" margin-right: 30px">
                <span class="glyphicon glyphicon-save" aria-hidden="true"></span> @ResourceSetting.Save
            </button>
        </div>

        @Html.Partial("~/Views/RstReport/GridView.cshtml", @Model.RstReportReestrs)
    </div>

</div>
