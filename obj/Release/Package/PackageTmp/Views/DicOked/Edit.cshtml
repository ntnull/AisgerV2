@using Aisger
@model Aisger.Models.DIC_OKED
@Html.Partial("~/Views/Home/EditHeaderView.cshtml")
@Html.Partial("~/Views/Home/MenuItem.cshtml")
<script type="text/javascript">
    function SaveChange() {
        $('#saveUpdate').click();
    }
</script>
@{ var controllerName = @ViewContext.RouteData.GetRequiredString("controller");}

<div id="B">
    <ul class="titlegroup" style="margin-top: 8px;">
        <li style="font-size: 18px; color: #2679b5;" id="parentLabel"> @ResourceSetting.Dictionary  <span></span></li>
        <li id="selectLabel"> <span class="glyphicon glyphicon-arrow-right"></span> @ResourceSetting.DicOked  </li>
    </ul>

    <div id="wrapper_grid">
        @using (Html.BeginForm("Edit", controllerName, FormMethod.Post, new { id = "demoForm", name = "demoForm" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.refParent)
            @Html.HiddenFor(model => model.IdVal)
            @Html.HiddenFor(model => model.CreateDate)
            @Html.ValidationMessage("ExistNumber")

            <div class="clearfixmandatory form-group">

                @Html.Label("Родитель")
                <div class="input">
                    @Html.TextBox("Model.ParentName", @Model.ParentName, new { @readonly = "readonly" })
                </div>
            </div>
            <div class="clearfixmandatory form-group">

                @Html.LabelFor(model => model.NameRu)
                <div class="input">
                    @Html.TextBoxFor(e => e.NameRu)  @Html.ValidationMessageFor(e => e.NameRu)
                </div>
            </div>
            <div class="clearfixmandatory form-group">

                @Html.LabelFor(model => model.NameKz)
                <div class="input">
                    @Html.TextBoxFor(e => e.NameKz)   @Html.ValidationMessageFor(e => e.NameKz)
                </div>
            </div>
            <div class="clearfixmandatory form-group">

                @Html.Label("Код")
                <div class="input">
                    @Html.TextBoxFor(e => e.Code)   @Html.ValidationMessageFor(e => e.Code)
                </div>
            </div>

            <button id="saveUpdate" type="submit" name="SaveUpdate" value="SaveUpdate" style="visibility: hidden;"></button>

        }
        <div>
            <button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Index", controllerName)'">
                <span class="glyphicon glyphicon-backward" aria-hidden="true"></span> @ResourceSetting.Return
            </button>
            <button type="button" class="btn btn-success btn-lg" onclick=" SaveChange() " style="float: right; margin-right: 30px">
                <span class="glyphicon glyphicon-save" aria-hidden="true"></span> @ResourceSetting.Save
            </button>
        </div>

    </div>
</div>
