@using Aisger
@model Aisger.Models.sub_dic_energyindicator
@Html.Partial("~/Views/Home/MenuItem.cshtml")
@Html.Partial("~/Views/Home/EditHeaderView.cshtml")

<script type="text/javascript">
    $(document).ready(function () {

    });
</script>

<div id="B">
    <ul class="titlegroup" style="margin-top: 8px;">
        <li style="font-size: 18px; color: #2679b5;" id="parentLabel"> @ResourceSetting.Other <span></span></li>
        <li id="selectLabel"> <span class="glyphicon glyphicon-arrow-right"></span>  @ResourceSetting.EnergyEfficiencyIndicators </li>

    </ul>

    <div id="wrapper_grid" style="margin-left: 50px">
        @using (Html.BeginForm("SubDicEnergyindicatorCreate", "Directories", FormMethod.Post, new { id = "demoForm", name = "demoForm" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.createdate)
            @Html.HiddenFor(model => model.editdate)
            @Html.HiddenFor(model => model.forgu)
            <div class="clearfixmandatory">
                <label>@ResourceSetting.NameKz</label>
                <div class="input">
                    @Html.TextBoxFor(model => model.namekz)
                    @Html.ValidationMessageFor(model => model.namekz)
                </div>
            </div>
            <div class="clearfixmandatory">
               <label>@ResourceSetting.NameRu</label>
                <div class="input">
                    @Html.TextBoxFor(model => model.nameru)
                    @Html.ValidationMessageFor(model => model.nameru)
                </div>
            </div>
            <div class="clearfixmandatory">
               <label>@ResourceSetting.DicUnitKz</label>
                <div class="input">
                    @Html.TextBoxFor(model => model.unitnamekz)
                    @Html.ValidationMessageFor(model => model.unitnamekz)
                </div>
            </div>
            <div class="clearfixmandatory">
                <label>@ResourceSetting.DicUnitRu</label>
                <div class="input">
                    @Html.TextBoxFor(model => model.unitnameru)
                    @Html.ValidationMessageFor(model => model.unitnameru)
                </div>
            </div>
            <div class="clearfixmandatory">
                <label>Для ГУ</label>
                <div class="input">
                    @{ 

                        var _checked = (Model.forgu!=null && Model.forgu.Value == true) ? "checked" : "";
                    }
                    <input type="checkbox" @_checked class="checked-forgu"/>
                    @Html.ValidationMessageFor(model => model.forgu)
                </div>
            </div>
            <button id="saveUpdate" type="submit" name="SaveUpdate" value="SaveUpdate" style="visibility: hidden;"></button>            
        }
        <div>
            <button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Index", "Directories")'">
                <span class="glyphicon glyphicon-backward" aria-hidden="true"></span> @ResourceSetting.Return
            </button>
            <button type="button" class="btn btn-success btn-lg" onclick=" SaveChange() " style="float: right; margin-right: 30px">
                <span class="glyphicon glyphicon-save" aria-hidden="true"></span> @ResourceSetting.Save
            </button>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script>
    $(function () {

        $('.checked-forgu').change(function () {
            var flag = $(this).is(":checked");
            console.log("checkek=", flag);
            $('#forgu').val(flag);

        })
    })
</script>
